{
	"name": "yuki",
	"version": "1.0.0",
	"main": "index.js",
	"scripts": {
		"start": "node dist/index.js",
		"dev": "set NODE_ENV=development&& nodemon --exec tsx src/index.ts",
		"build": "tsc",
		"deploy": "tsx src/deploy-commands.ts",
		"bstart": "npm run build && npm run start",
		"preinstall": "npx only-allow pnpm",
		"format": "biome format --write ./src",
		"lint": "biome lint ./src"
	},
	"dependencies": {
		"axios": "^1.12.2",
		"better-sqlite3": "^12.4.1",
		"dayjs": "^1.11.18",
		"discord.js": "^14.23.2",
		"dotenv": "^17.2.3",
		"node-schedule": "^2.1.1",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^24.8.1",
		"@types/node-schedule": "^2.1.8",
		"nodemon": "^3.1.10",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=24"
	}
}
